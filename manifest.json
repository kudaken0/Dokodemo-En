{
  "manifest_version": 3,
  "name": "為替レート変換ツール(日本円)",
  "version": "1.0",
  "description": "リアルタイムで現在の為替レートを取得しそれに基づき日本円に変換します。",
  "permissions": ["contextMenus", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "img/48.png",
    "128": "img/128.png"
  }
}
